<Window x:Class="Life.MainWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Life"
        mc:Ignorable="d"
        Title="Симмулятор эволюции" Height="450" Width="800">
    <Canvas x:Name="CanvasMap" x:FieldModifier="public">
        <Label x:Name="Label" Content="0" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="707" Canvas.Top="361"/>
        <Button x:Name="StatrLife" Content="Начать" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="StatrLife_Click" Canvas.Left="707" Canvas.Top="322"/>
        <Button x:Name="Continue" Content="Продолжить" Canvas.Left="707" Canvas.Top="297" Width="75" IsEnabled="False" Click="Continue_Click"/>
        <Button x:Name="Pause" Content="Пауза" Canvas.Left="707" Canvas.Top="272" Width="75" Click="Pause_Click" IsEnabled="False"/>
    </Canvas>
</Window>
